<body>
  <h2>Working with Objects (Open Console)</h2>
  <button onclick="runObjectTasks()">Run Task 2</button>

  <script>
    function runObjectTasks() {
      const student = {
        name: "Anjali",
        age: 20,
        course: "BCA",
        showInfo: function () {
          console.log(`Student: ${this.name}, Age: ${this.age}, Course: ${this.course}`);
        }
      };

      student.showInfo();

      student.age = 21;
      console.log("Updated Age:", student.age);

      student.city = "Mumbai";
      console.log("Added City:", student.city);

      console.log("Name:", student["name"]);
      console.log("Course:", student.course);

      delete student.course;
      console.log("After removing course:", student);
    }
  </script>
</body>
</html>
