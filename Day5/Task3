<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Object Destructuring and Spread</title>
</head>
<body>
  <h2>Open the Console to See Output</h2>

  <script>
    const user = {
      name: "Raj",
      age: 25,
      location: "Delhi"
    };

    const { name, age } = user;
    console.log("Name:", name);
    console.log("Age:", age);

    const employee = {
      id: 101,
      role: "Developer"
    };

    const { id, role, department = "IT" } = employee;
    console.log("ID:", id);
    console.log("Role:", role);
    console.log("Department:", department);

    const profile = {
      username: "raj123",
      contact: {
        email: "raj@example.com",
        phone: "9876543210"
      }
    };

    const {
      contact: { email, phone }
    } = profile;
    console.log("Email:", email);
    console.log("Phone:", phone);

    const original = { x: 1, y: 2 };
    const clone = { ...original };
    console.log("Cloned Object:", clone);

    const obj1 = { a: 10, b: 20 };
    const obj2 = { b: 30, c: 40 };
    const merged = { ...obj1, ...obj2 };
    console.log("Merged Object:", merged);
  </script>
</body>
</html>
