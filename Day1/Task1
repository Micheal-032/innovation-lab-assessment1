var name = "Leo";
console.log("Initial name using var:", name);
name = "Parthiban";
console.log("Modified name using var:", name);

let age = 26;
console.log("Initial age using let:", age);
age = 45;
console.log("Modified age using let:", age);

const country = "India";
console.log("Country using const:", country);

console.log("Hello! My name is " + name + ", I'm " + age + " years old and I live in " + country + ".");
